@model Nyika.Domain.Entities.MF.Loan

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/MF/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.LoanID)
    <div class="card text-white bg-dark p-md-0 mx-0 my-0" style="min-height:540px">
        <div class="card-header bg-dark">
            <div class="row">
                <div class="col-5">
                    <h4>Are you sure you want to approve this?</h4>
                </div>
                <div class="col-7 text-right">
                    <div class="btn-group btn-group-justified">
                        @if (TempData["Approve"].ToString() != "Already Approved")
                        {
                            <input type="submit" value="Approve" class="btn btn-danger mx-md-1" />
                        }
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>

        </div>
        <div class="card-body p-md-3 b-0 m-md-0">


            <div class="row">
                <div class="col-md-12">

                    <p class="m-md-0">
                        <strong>@Html.DisplayNameFor(model => model.Member.MemberName) : </strong>@Html.DisplayFor(model => model.Member.MemberName)
                    </p>
                    <p class="m-md-0">
                        <strong>@Html.DisplayNameFor(model => model.LoanNo) : </strong>@Html.DisplayFor(model => model.LoanNo)
                    </p>
                    <p class="m-md-0">
                        <strong>@Html.DisplayNameFor(model => model.LoanStatus) : </strong>@Html.DisplayFor(model => model.LoanStatus)
                    </p>
                    <p class="m-md-0">
                        <strong>@Html.DisplayNameFor(model => model.DisbursementDate) : </strong>@Html.DisplayFor(model => model.DisbursementDate)
                    </p>
                    <p class="m-md-0">
                        <strong>@Html.DisplayNameFor(model => model.DisbursedAmount) : </strong>@Html.DisplayFor(model => model.DisbursedAmount)
                    </p>


                    <p class="m-md-0">
                        <strong>@Html.DisplayNameFor(model => model.InterestAmount) : </strong>@Html.DisplayFor(model => model.InterestAmount)
                    </p>
                    <p class="m-md-0">
                        <strong>@Html.DisplayNameFor(model => model.LoanCycle) : </strong>@Html.DisplayFor(model => model.LoanCycle)
                    </p>
                    <p class="m-md-0">
                        <strong>@Html.DisplayNameFor(model => model.LoanDue) : </strong>@Html.DisplayFor(model => model.LoanDue)
                    </p>
                    <p class="m-md-0">
                        <strong>@Html.DisplayNameFor(model => model.OverdueAmount) : </strong>@Html.DisplayFor(model => model.OverdueAmount)
                    </p>
                </div>
            </div>

            @if (TempData["Approve"].ToString() == "Already Approved")
            {
                <div class="row my-md-3 text-center">
                    <div class="col-md-12">
                        <h4 class="text-white bg-danger p-md-5">@TempData["Approve"]</h4>
                    </div>
                </div>
            }
        </div>
    </div>
}
