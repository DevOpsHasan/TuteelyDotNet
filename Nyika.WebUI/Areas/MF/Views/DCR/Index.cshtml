@model IEnumerable<Nyika.Domain.Entities.Accounts.AccountGLVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/MF/Views/Shared/_Layout.cshtml";
}

<div class="card text-white bg-dark p-md-0 mx-0 my-0" style="min-height:540px">
    <div class="card-header bg-dark">
        <div class="row">
            <div class="col-md-6">
                <h4>Daily Collection Register</h4>
            </div>
            <div class="col-md-6 text-right">
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-secondary" })
            </div>
           
        </div>


    </div>
    <div class="card-body p-md-3 b-0 m-md-0 text-dark">
        <table class="table table-responsive-md table-sm table-secondary table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Project
                    </th>
                    <th>
                        Group
                    </th>
                    <th>
                        No
                    </th>
                    <th>
                        Date
                    </th>
                 
                    @*<th>
                        Acc. Head
                    </th>*@
                    <th>
                        Amount
                    </th>
                    <th>
                        Particulars
                    </th>
                    <th>
                        Entry By
                    </th>

                   
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupsName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vno)
                    </td>
                    <td>
                        @item.WorkDate.ToString("dd/MMM/yyyy")
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.AccountSubHead.AccountSubHeadName)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Particulars)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EntryBy)
                    </td>

                  
                    <td class="text-right">
                        <div class="btn-group text-white m-md-0 p-md-0">
                           
                            <a class="btn btn-danger" href="@Url.Action("Delete", "DCR", new { id = item.AccountGLID })" data-toggle="tooltip" data-placement="top" title="Delete"><strong>X</strong></a>
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


