@model IEnumerable<Nyika.Domain.Entities.MF.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/MF/Views/Shared/_Layout.cshtml";
}

<div class="card text-white bg-dark p-md-0 mx-0 my-0" style="min-height:540px">
    <div class="card-header bg-dark">
        <div class="row">
            <div class="col-md-6">
                <h4>Product List</h4>
            </div>
            <div class="col-md-6 text-right">
                @Html.ActionLink("Create New", "Create",null,new { @class= "btn btn-secondary" })
            </div>
        </div>
        
        
    </div>
    <div class="card-body p-md-3 b-0 m-md-0 text-dark">
        <table class="table table-responsive-md table-sm table-secondary table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Project.ProjectName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InterestRate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InterestRateType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IntFactor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Duration)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NoOfInstallment)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Inactive)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Project.ProjectName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InterestRate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InterestRateType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IntFactor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NoOfInstallment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Inactive)
                    </td>
                    <td class="text-right">
                        <div class="btn-group text-white m-md-0 p-md-0">

                           @* <a class="btn btn-secondary" href="@Url.Action("Edit", "Products", new { id = item.ProductID })" data-toggle="tooltip" data-placement="top" title="Edit"><strong>i</strong></a>*@
                            <a class="btn btn-danger" href="@Url.Action("Delete", "Products", new { id = item.ProductID })" data-toggle="tooltip" data-placement="top" title="Delete"><strong>X</strong></a>
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


