@model Nyika.WebUI.Areas.Accounts.Models.VoucherJournalViewModel

@{
    ViewBag.Title = ViewBag.VType;
    Layout = "~/Areas/Accounts/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card text-white bg-dark p-md-0 mx-0 my-0" style="min-height:540px">
        <div class="card-header bg-dark">
            <div class="row">
                <div class="col-md-4">
                    <h4>Journal Voucher</h4>
                </div>
                <div class="col-md-8 text-right">
                    <div class="btn-group btn-group-justified">
                        <input type="submit" value="Save" class="btn btn-secondary mx-md-1" />
                        @*@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })*@
                    </div>
                </div>
            </div>

        </div>
        <div class="card-body p-md-3 b-0 m-md-0">


            <div class="row">
                <div class="col-md-12">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.AccountSubHeadIDDr, "Account Head Dr", htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.DropDownList("AccountSubHeadIDDr", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.AccountSubHeadIDDr, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(model => model.AccountSubHeadIDCr, "Account Head Cr", htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.DropDownList("AccountSubHeadIDCr", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.AccountSubHeadIDCr, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Pat, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Pat, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Pat, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    @if (TempData["Msg"] != null)
                    {
                        if (TempData["Msg"].ToString() == "Successfully Save")
                        {
                        <script type="text/javascript">
                            alert('@TempData["Msg"]');
                            document.getElementById("Amount").value = '';
                            document.getElementById("Pat").value = '';
                        </script>
                        }
                        else
                        {
                            <script type="text/javascript">
                            alert('@TempData["Msg"]');
                            </script>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
}





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

