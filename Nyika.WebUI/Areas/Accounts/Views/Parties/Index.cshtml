@model IEnumerable<Nyika.Domain.Entities.Accounts.Party>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Accounts/Views/Shared/_Layout.cshtml";
}

<div class="card text-white bg-dark p-md-0 mx-0 my-0" style="min-height:540px">
    <div class="card-header bg-dark">
        <div class="row">
            <div class="col-md-6">
                <h4>Party List</h4>
            </div>
            <div class="col-md-6 text-right">
                @Html.ActionLink("Create New", "Create",null,new { @class= "btn btn-secondary" })
            </div>
        </div>
        
        
    </div>
    <div class="card-body p-md-3 b-0 m-md-0 text-dark">
        <table class="table table-responsive-md table-sm table-secondary table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PartyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ZIPCode)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PartyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ZIPCode)
                    </td>
                    <td class="text-right">
                        <div class="btn-group text-white m-md-0 p-md-0">

                            <a class="btn btn-secondary" href="@Url.Action("Edit", "Parties", new { id = item.PartyID })" data-toggle="tooltip" data-placement="top" title="Edit"><strong>i</strong></a>
                            <a class="btn btn-danger" href="@Url.Action("Delete", "Parties", new { id = item.PartyID })" data-toggle="tooltip" data-placement="top" title="Delete"><strong>X</strong></a>
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


