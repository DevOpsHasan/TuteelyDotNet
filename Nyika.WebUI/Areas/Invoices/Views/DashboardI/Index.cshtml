@model IEnumerable<Nyika.Domain.Entities.Invoices.Invoice>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Invoices/Views/Shared/_Layout.cshtml";
}



<div class="card text-white bg-dark p-md-0 mx-0 my-0" style="min-height:540px">
    <div class="card-header bg-dark">
        <div class="row">
            <div class="col-md-8">
                <h4>Invoice List</h4>
            </div>
            <div class="col-md-4 text-right">
                <div class="form-inline">
                    @using (Html.BeginForm("Index", "DashboardI", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="input-group text-center">
                            <input type="text" class="form-control" name="txtSearch" id="txtSearch" placeholder="Invoice No">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                    <strong>Find</strong>
                                </button>
                            </div>
                        </div>

                    }
                    @Html.ActionLink("Create New", "Inv", new { id=0}, new { @class = "btn btn-secondary mx-md-2" })
                </div>

            </div>

        </div>


    </div>
    <div class="card-body p-md-3 b-0 m-md-0 text-dark">
        <table class="table table-responsive-md table-sm table-secondary table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.InvoiceNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Party.PartyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InvoiceDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DueDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.JobDescription)
                    </th>
                    
                 
                    <th>
                        @Html.DisplayNameFor(model => model.PaymentComplete)
                    </th>
                   
                    <th>
                        @Html.DisplayNameFor(model => model.EntryBy)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Party.PartyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DueDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobDescription)
                    </td>
                   
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentComplete)
                    </td>
                 
                    <td>
                        @Html.DisplayFor(modelItem => item.EntryBy)
                    </td>


                    <td class="text-right">
                        <div class="btn-group text-white m-md-0 p-md-0">
                            <a class="btn btn-secondary" href="@Url.Action("Inv", "DashboardI", new { id = item.InvoiceID})" data-toggle="tooltip" data-placement="top" title="Edit"><strong>E</strong></a>
                            @*<a class="btn btn-secondary" href="@Url.Action("LoadPrintPreview", "Invoices", new { id = item.InvoiceID })" data-toggle="tooltip" data-placement="top" title="Priview"><strong>P</strong></a>
                            <a class="btn btn-danger" href="@Url.Action("Delete", "Invoices", new { id = item.InvoiceID })" data-toggle="tooltip" data-placement="top" title="Delete"><strong>X</strong></a>*@
         
                
                                @*<a class="btn btn-secondary" href="@Url.Action("Edit", "Invoices", new { id = item.InvoiceID })" data-toggle="tooltip" data-placement="top" title="Edit"><strong>i</strong></a>*@
                               
                         
                           
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

