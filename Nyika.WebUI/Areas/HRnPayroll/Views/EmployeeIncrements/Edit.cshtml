                                @Html.EditorFor(model => model.ProfessionalAllowance, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ProfessionalAllowance, "", new { @class = "text-danger" })
                            </div>
