@model Nyika.Domain.Entities.HR.EmployeeShowcause

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/HRnPayroll/Views/Shared/_Layout.cshtml";
}





@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.EmployeeShowcauseID)
    <div class="card text-white bg-dark p-md-0 mx-0 my-0" style="min-height:540px">
        <div class="card-header bg-dark">
            <div class="row">
                <div class="col-5">
                    <h4>Are you sure you want to delete this?</h4>
                </div>
                <div class="col-7 text-right">
                    <div class="btn-group btn-group-justified">
                        <input type="submit" value="Delete" class="btn btn-danger mx-md-1" />
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>

        </div>
        <div class="card-body p-md-3 b-0 m-md-0">


            <div class="row">
                <div class="col-md-12">
                    
                    <p class="m-md-0">
                        <strong>
                            @Html.DisplayNameFor(model => model.Employee.PIN) :
                        </strong>
                        @Html.DisplayFor(model => model.Employee.PIN)
                    </p>
                    <p class="m-md-0">
                        <strong>
                            @Html.DisplayNameFor(model => model.Employee.EmployeeName) :
                        </strong>
                        @Html.DisplayFor(model => model.Employee.EmployeeName)
                    </p>
                    
                    <p class="m-md-0">
                        <strong>
                            @Html.DisplayNameFor(model => model.Subject) :
                        </strong>
                        @Html.DisplayFor(model => model.Subject)
                    </p>

                    <p class="m-md-0">
                        <strong>
                            @Html.DisplayNameFor(model => model.Details) :
                        </strong>
                        @Html.DisplayFor(model => model.Details)
                    </p>

                    <p class="m-md-0">
                        <strong>
                            @Html.DisplayNameFor(model => model.ActionTaken) :
                        </strong>
                        @Html.DisplayFor(model => model.ActionTaken)
                    </p>
                  
                    <p class="m-md-0">
                        <strong>
                            @Html.DisplayNameFor(model => model.WorkDate) :
                        </strong>
                        @Html.DisplayFor(model => model.WorkDate)
                    </p>

                    <p class="m-md-0">
                        <strong>
                            @Html.DisplayNameFor(model => model.EntryBy) :
                        </strong>
                        @Html.DisplayFor(model => model.EntryBy)
                    </p>

                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <h4>@ViewBag.Msg</h4>
                </div>
            </div>
        </div>
    </div>
}