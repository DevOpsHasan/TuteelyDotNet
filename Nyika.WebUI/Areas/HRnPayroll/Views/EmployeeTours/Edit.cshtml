@model Nyika.Domain.Entities.HR.EmployeeTour

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/HRnPayroll/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EmployeeTourID)
    @Html.AntiForgeryToken()
    <div class="card text-white bg-dark p-md-0 mx-0 my-0" style="min-height:540px">
        <div class="card-header bg-dark">
            <div class="row">
                <div class="col-md-4">
                    <h4>Update Employee Tour</h4>
                </div>
                <div class="col-md-8 text-right">
                    <div class="btn-group btn-group-justified">
                        <input type="submit" value="Save" class="btn btn-secondary mx-md-1" />
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>

        </div>
        <div class="card-body p-md-2 b-0 m-md-0">


            <div class="row p-md-0 m-md-0">
                <div class="col-md-3 p-md-0 m-md-0">
                    <div class="form-horizontal p-md-0 m-md-0">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group p-md-0 m-md-0">
                            @Html.LabelFor(model => model.EmployeeID, "Employee PIN", htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.DropDownList("EmployeeID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.EmployeeID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                       

                        <div class="form-group p-md-0 m-md-0">
                            @Html.LabelFor(model => model.TourType, "Tour Type", htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.DropDownList("TourType", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TourType, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group p-md-0 m-md-0">
                            @Html.LabelFor(model => model.FromDate, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.FromDate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FromDate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group p-md-0 m-md-0">
                            @Html.LabelFor(model => model.TillDate, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.TillDate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TillDate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group p-md-0 m-md-0">
                            @Html.LabelFor(model => model.ApplicationDate, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.ApplicationDate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ApplicationDate, "", new { @class = "text-danger" })
                            </div>
                        </div>





                    </div>

                </div>


                <div class="col-md-3 p-md-0 m-md-0">
                    <div class="form-horizontal p-md-0 m-md-0">


                        <div class="form-group p-md-0 m-md-0">
                            @Html.LabelFor(model => model.Particulars, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Particulars, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Particulars, "", new { @class = "text-danger" })
                            </div>
                        </div>

                      

                    </div>

                </div>




            </div>

            <div class="row">
                <div class="col-md-12">
                    <h4>@ViewBag.Msg</h4>
                </div>
            </div>
        </div>
    </div>
}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}











