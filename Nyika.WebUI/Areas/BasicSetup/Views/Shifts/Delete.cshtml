@model Nyika.Domain.Entities.Setup.Shift

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/BasicSetup/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ShiftID)
    <div class="card text-white bg-dark p-md-0 mx-0 my-0" style="min-height:540px">
        <div class="card-header bg-dark">
            <div class="row">
                <div class="col-5">
                    <h4>Are you sure you want to delete this?</h4>
                </div>
                <div class="col-7 text-right">
                    <div class="btn-group btn-group-justified">
                        @if (TempData["Delete"].ToString() != "In use, can not delete at this moment")
                        {
                            <input type="submit" value="Delete" class="btn btn-danger mx-md-1" />
                        }
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>

        </div>
        <div class="card-body p-md-3 b-0 m-md-0">


            <div class="row">
                <div class="col-md-12">
                    <dl class="dl-horizontal">
                        <dt>
                            <strong>
                                @Html.DisplayNameFor(model => model.ShiftName) :
                            </strong>
                            @Html.DisplayFor(model => model.ShiftName)
                        </dt>
                        <dt>
                            <strong>
                                @Html.DisplayNameFor(model => model.ShiftIn) :
                            </strong>
                            @Html.DisplayFor(model => model.ShiftIn)
                        </dt>
                        <dt>
                            <strong>
                                @Html.DisplayNameFor(model => model.ShiftOut) :
                            </strong>
                            @Html.DisplayFor(model => model.ShiftOut)
                        </dt>
                        <dt>
                            <strong>
                                @Html.DisplayNameFor(model => model.ShiftAbsent) :
                            </strong>
                            @Html.DisplayFor(model => model.ShiftAbsent)
                        </dt>
                        <dt>
                            <strong>
                                @Html.DisplayNameFor(model => model.ShiftLate) :
                            </strong>
                            @Html.DisplayFor(model => model.ShiftLate)
                        </dt>
                        <dt>
                            <strong>
                                @Html.DisplayNameFor(model => model.ShiftEarly) :
                            </strong>
                            @Html.DisplayFor(model => model.ShiftEarly)
                        </dt>
                        <dt>
                            <strong>
                                @Html.DisplayNameFor(model => model.ShiftLunchFrom) :
                            </strong>
                            @Html.DisplayFor(model => model.ShiftLunchFrom)
                        </dt>
                        <dt>
                            <strong>
                                @Html.DisplayNameFor(model => model.ShiftLunchTill) :
                            </strong>
                            @Html.DisplayFor(model => model.ShiftLunchTill)
                        </dt>
                        <dt>
                            <strong>
                                @Html.DisplayNameFor(model => model.ShiftLastPunch) :
                            </strong>
                            @Html.DisplayFor(model => model.ShiftLastPunch)
                        </dt>

                        <dt>
                            <strong>
                                @Html.DisplayNameFor(model => model.DefaultShift) :
                            </strong>
                            @Html.DisplayFor(model => model.DefaultShift)
                        </dt>
                    </dl>
                </div>
            </div>

            @if (TempData["Delete"].ToString() == "In use, can not delete at this moment")
            {
                <div class="row my-md-3 text-center">
                    <div class="col-md-12">
                        <h4 class="text-white bg-danger p-md-5">@TempData["Delete"]</h4>
                    </div>
                </div>
            }
        </div>
    </div>
}
