@model IEnumerable<Nyika.WebUI.Areas.BasicSetup.Models.UserRoleViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/BasicSetup/Views/Shared/_Layout.cshtml";
}

<div class="card text-white bg-dark p-md-0 mx-0 my-0" style="min-height:540px">
    <div class="card-header bg-dark">
        <div class="row">
            <div class="col-md-6">
                <h4>Team Members</h4>
            </div>
            <div class="col-md-6 text-right">
                <a class="btn btn-secondary" href="/Account/RegisterUser">New Member</a>

            </div>
        </div>


    </div>
    <div class="card-body p-md-3 b-0 m-md-0 text-dark">
        <table class="table table-responsive-md table-sm table-secondary table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RoleName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td class="text-right">
                        <div class="btn-group text-white m-md-0 p-md-0">
                            @using (Html.BeginForm("userStatus", "UserLists", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="input-group text-center">
                                    <input type="hidden" name="Id" id="Id" value="@item.Id">
                                    <div class="input-group-btn">
                                        @if (item.Status != "Active")
                                        {
                                            <button class="btn btn-secondary" type="submit" name="BtnAll" value="Reset" data-toggle="tooltip" data-placement="top" title="Reset">
                                                <strong>R</strong>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-danger" type="submit" name="BtnAll" value="Deactive" data-toggle="tooltip" data-placement="top" title="Deactive">
                                                <strong>X</strong>
                                            </button>
                                        }
                                    </div>
                                </div>

                            }

                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
