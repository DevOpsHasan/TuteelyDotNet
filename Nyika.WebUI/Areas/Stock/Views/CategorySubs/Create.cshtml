@model Nyika.Domain.Entities.Stock.CategorySub

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Stock/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "CategorySubs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="card text-white bg-dark p-md-0 mx-0 my-0" style="min-height:540px">
        <div class="card-header bg-dark">
            <div class="row">
                <div class="col-md-4">
                    <h4>Create Sub Category</h4>
                </div>
                <div class="col-md-8 text-right">
                    <div class="btn-group btn-group-justified">
                        <input type="submit" value="Save" class="btn btn-secondary mx-md-1" />
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>

        </div>
        <div class="card-body p-md-3 b-0 m-md-0">


            <div class="row">
                <div class="col-md-4">

                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryID, "Category", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CategorySubName, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.CategorySubName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CategorySubName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CategorySubNameLocal, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.CategorySubNameLocal, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CategorySubNameLocal, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.UrlLink, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.UrlLink, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UrlLink, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    
                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        @Html.Label("Sub Category Header", htmlAttributes: new { @class = "control-label col-md-12" })
                        <img id="imgHeaderUrl" name="imgHeaderUrl" src="@Url.Content("~/Images/notfound.jpg?"+@DateTime.Now.ToFileTime())" alt="Logo" class="img-fluid" />
                        <div class="col-md-12">
                            <input type="file" class="form-control" name="HeaderUrl" id="HeaderUrl" onchange="ShowImagePreview(this, document.getElementById('imgHeaderUrl'))" />
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Sub Category Logo", htmlAttributes: new { @class = "control-label col-md-12" })
                        <img id="imgLogoUrl" name="imgLogoUrl" src="@Url.Content("~/Images/notfound.jpg?"+@DateTime.Now.ToFileTime())" alt="Logo" class="img-fluid" />
                        <div class="col-md-12">
                            <input type="file" class="form-control" name="LogoUrl" id="LogoUrl" onchange="ShowImagePreview(this, document.getElementById('imgLogoUrl'))" />
                        </div>
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <h4>@ViewBag.Msg</h4>
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
