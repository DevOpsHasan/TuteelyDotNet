@model IEnumerable<Nyika.Domain.Entities.Stock.Item>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Stock/Views/Shared/_Layout.cshtml";
}

<div class="card text-white bg-dark p-md-0 mx-0 my-0" style="min-height:540px">
    <div class="card-header bg-dark">
        <div class="row">
            <div class="col-md-7">
                <h4>Item List</h4>
            </div>
            
            <div class="col-md-5 justify-content-end">
                <div class="form-inline">
                    @using (Html.BeginForm("Index", "Items", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @*<h6>Member No / Member Name / Group No / Group Name</h6>*@
                        <div class="input-group text-center">
                            <input type="text" class="form-control" name="txtSearch" id="txtSearch" placeholder="Item No/Name">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                    <strong>Find</strong>
                                </button>
                            </div>
                        </div>

                    }
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-secondary mx-md-2" })
                </div>
            </div>
        </div>
        
        
    </div>
    <div class="card-body p-md-3 b-0 m-md-0 text-dark">
        <table class="table table-responsive-md table-sm table-secondary table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ItemNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ItemName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ItemNameLocal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OldPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NewPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Inactive)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemNameLocal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OldPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NewPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Inactive)
                    </td>
                    <td class="text-right">
                        <div class="btn-group text-white m-md-0 p-md-0">

                            <a class="btn btn-secondary" href="@Url.Action("Edit", "Items", new { id = item.ItemID })" data-toggle="tooltip" data-placement="top" title="Edit"><strong>i</strong></a>
                            <a class="btn btn-danger" href="@Url.Action("Delete", "Items", new { id = item.ItemID })" data-toggle="tooltip" data-placement="top" title="Delete"><strong>X</strong></a>
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


