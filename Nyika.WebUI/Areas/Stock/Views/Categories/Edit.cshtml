@model Nyika.Domain.Entities.Stock.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Stock/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Categories", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CategoryID)
    @Html.HiddenFor(model => model.HeaderUrl)
    @Html.HiddenFor(model => model.LogoUrl)
    <div class="card text-white bg-dark p-md-0 mx-0 my-0" style="min-height:540px">
        <div class="card-header bg-dark">
            <div class="row">
                <div class="col-md-4">
                    <h4>Update Category</h4>
                </div>
                <div class="col-md-8 text-right">
                    <div class="btn-group btn-group-justified">
                        <input type="submit" value="Save" class="btn btn-secondary mx-md-1" />
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>

        </div>
        <div class="card-body p-md-3 b-0 m-md-0">


            <div class="row">
                <div class="col-md-4">


                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryNameLocal, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.CategoryNameLocal, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CategoryNameLocal, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.UrlLink, htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.UrlLink, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UrlLink, "", new { @class = "text-danger" })
                        </div>
                    </div>

                   


                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        @Html.Label("Category Header", htmlAttributes: new { @class = "control-label col-md-12" })
                        <img id="HeaderUrl" name="HeaderUrl" src="@Url.Content(Model.HeaderUrl)?@DateTime.Now.ToFileTime()" alt="Logo" class="img-fluid" />
                        <div class="col-md-12">
                            <input type="file" class="form-control" name="HeaderUrl" id="HeaderUrl" onchange="ShowImagePreview(this, document.getElementById('imgHeaderUrl'))" />
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Category Logo", htmlAttributes: new { @class = "control-label col-md-12" })
                        <img id="imgLogoUrl" name="imgLogoUrl" src="@Url.Content(Model.LogoUrl)?@DateTime.Now.ToFileTime()" alt="Logo" class="img-fluid" />
                        <div class="col-md-12">
                            <input type="file" class="form-control" name="LogoUrl" id="LogoUrl" onchange="ShowImagePreview(this, document.getElementById('imgLogoUrl'))" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <h4>@ViewBag.Msg</h4>
                </div>
            </div>
        </div>
    </div>
}







@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
