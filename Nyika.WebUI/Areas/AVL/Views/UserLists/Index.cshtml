@model IEnumerable<Nyika.WebUI.Areas.AVL.Models.UserRoleViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AVL/Views/Shared/_Layout.cshtml";
}

<div class="card text-white bg-dark p-md-0 mx-0 my-0" style="min-height:540px">
    <div class="card-header bg-dark">
        <div class="row">
            <div class="col-md-6">
                <h4>User List</h4>
            </div>
            <div class="col-md-6 text-right">
             

            </div>
        </div>


    </div>
    <div class="card-body p-md-3 b-0 m-md-0 text-dark">
        <table class="table table-responsive-md table-sm table-secondary table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RegistrationDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RoleName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>

                        @item.RegistrationDate.ToString("dd/MMM/yyyy")
                       
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td class="text-right">
                        <div class="btn-group text-white m-md-0 p-md-0">
                            <a class="btn btn-danger" href="@Url.Action("Delete", "UserLists", new { id = item.Id })" data-toggle="tooltip" data-placement="top" title="Delete"><strong>X</strong></a>                            
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


