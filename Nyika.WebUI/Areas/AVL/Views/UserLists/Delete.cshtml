@model Nyika.WebUI.Areas.AVL.Models.UserRoleViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/AVL/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("SuperUserDelete","UserLists",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="card text-white bg-dark p-md-0 mx-0 my-0" style="min-height:540px">
        <div class="card-header bg-dark">
            <div class="row">
                <div class="col-5">
                    <h4>Are you sure you want to delete this?</h4>
                </div>
                <div class="col-7 text-right">
                    <div class="btn-group btn-group-justified">
                            <input type="submit" value="Delete" class="btn btn-danger mx-md-1" />
                    </div>
                </div>
            </div>

        </div>
        <div class="card-body p-md-3 b-0 m-md-0">


            <div class="row">
                <div class="col-md-12">
                    <dl class="dl-horizontal">
                        <dt>
                            <strong>
                                @Html.DisplayNameFor(model => model.UserName) :
                            </strong>
                            @Html.DisplayFor(model => model.UserName)
                        </dt>
                        <dt>
                            <strong>
                                @Html.DisplayNameFor(model => model.CompanyName) :
                            </strong>
                            @Model.CompanyName
                        </dt>
                        <dt>
                            <strong>
                                @Html.DisplayNameFor(model => model.RoleName) :
                            </strong>
                            @Model.RoleName
                        </dt>
                    </dl>
                </div>
            </div>

        </div>
    </div>
}
