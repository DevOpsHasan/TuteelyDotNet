
@model IEnumerable<Nyika.WebUI.Models.CategorySubVM>

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}


<div class="container-fluid m-0 p-0">
    <div class="row p-0 mx-0 my-1">
        <div class="col-8 align-self-center pr-md-1 my-0 p-0">
            <img src="@Url.Content("~/Images/notfound.jpg?"+@DateTime.Now.ToFileTime())" alt="Nyika logo" class="img-fluid w-100" />
        </div>
        <div class="col-4 align-self-center p-0 m-0">
            <div class="row p-0 m-0">
                <div class="col-12 p-0 m-0">
                    <img src="@Url.Content("~/Images/notfound.jpg?"+@DateTime.Now.ToFileTime())" alt="Nyika logo" class="img-fluid w-100" />
                </div>

                <div class="col-12 p-0 m-0">
                    <img src="@Url.Content("~/Images/notfound.jpg?"+@DateTime.Now.ToFileTime())" alt="Nyika logo" class="img-fluid w-100" />
                </div>
            </div>
        </div>
    </div>



    <div class="row p-0 m-0 justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-md-3 p-1">
                <a href="@Url.Content(item.UrlLink)" class="btn btn-light btn-block h-100">
                    <div class="d-inline p-0"><img src="@Url.Content(item.LogoUrl)?@DateTime.Now.ToFileTime())" alt="Nyika logo" style="width:50px" /></div>
                    <div class="d-inline p-0" style="width:100%;white-space:normal">@item.CategoryName</div>            
                </a>
            </div>

        }

    </div>


</div>