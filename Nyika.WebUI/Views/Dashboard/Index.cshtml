@model Nyika.WebUI.Models.DashboardVM

@{
    ViewBag.Title = "Dashboard";
}

<div class="row">
    <div class="col-md-12">
        <div class="card text-white bg-dark p-md-0 mx-0 my-0" style="min-height:540px">
            <div class="card-header bg-dark">
                <div class="row">
                    <div class="col-md-4">
                        <h4>Current Business Date : @Model.WorkDate</h4>
                    </div>
                    <div class="col-md-8 text-center">

                        <h2 class="text-white bg-danger p-md-1">Subscription will Expire on @Model.ExpireDate</h2>

                    </div>
                </div>
            </div>
            <div class="card-body">

                <div class="row">
                    @if (User.IsInRole("Surzo"))
                    {


                        <div class="col-md-4">
                            <h2>Niyka Administrator</h2>
                            <p>Control</p>
                            <p><a class="btn btn-success" href="~/AVL/DashboardAVL">Dashboard &raquo;</a></p>
                        </div>


                    }
                    else
                    {

                        <div class="col-md-3">
                            <h2>Basic Setup</h2>
                            <p>Arrange things before begin</p>
                            <p><a class="btn btn-success" href="~/BasicSetup/DashboardS">Dashboard &raquo;</a></p>
                        </div>
                        <div class="col-md-3">
                            <h2>HR and Payroll</h2>
                            <p>Manage your work force</p>
                            <p><a class="btn btn-success" href="~/HRnPayroll/DashboardH">Dashboard &raquo;</a></p>
                        </div>
                        <div class="col-md-3">
                            <h2>Accounts</h2>
                            <p>Everything you need for control</p>
                            <p><a class="btn btn-success" href="~/Accounts/DashboardA">Dashboard &raquo;</a></p>
                        </div>

                        <div class="col-md-3">
                            <h2>Stock</h2>
                            <p>Online Stock</p>
                            <p><a class="btn btn-success" href="~/Stock/DashboardSh">Dashboard &raquo;</a></p>
                        </div>


                        <div class="col-md-3">
                            <h2>User</h2>
                            <p>Cash Requisition &amp; Payslip</p>
                            <p><a class="btn btn-success" href="~/User/DashboardU">Dashboard &raquo;</a></p>
                        </div>
                        <div class="col-md-3">
                            <h2>Invoice</h2>
                            <p>For invoice fans</p>
                            <p><a class="btn btn-success" href="~/Invoices/DashboardI">Dashboard &raquo;</a></p>
                        </div>



                        <div class="col-md-3">
                            <h2>Microfinance</h2>
                            <p>For invoice fans</p>
                            <p><a class="btn btn-success" href="~/MF/DashboardM">Dashboard &raquo;</a></p>
                        </div>


                    }
                </div>
            </div>
        </div>
    </div>
</div>

