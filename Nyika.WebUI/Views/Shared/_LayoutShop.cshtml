    <div class="container-fluid fixed-top">
        <div class="row justify-content-between bg-warning" style="min-height:103px">
            <div class="col-6 text-left align-self-center">
                <a class="navbar-brand" href="@Url.Content("~/")">
                    <img src="@Url.Content("~/Images/allpaikarilogo.png?"+@DateTime.Now.ToFileTime())" alt="Nyika logo" />

                </a>
            </div>

            <div class="col-6 align-self-center text-right">
                <div class="btn-group" role="group" aria-label="Basic example">
                    @Html.ActionLink("En", "ChangeLanguage", "Language", new { SelectedLanguage = "en" }, new { @class = "btn btn-light align-self-center" })
                    @Html.ActionLink("Bn", "ChangeLanguage", "Language", new { SelectedLanguage = "bn" }, new { @class = "btn btn-success align-self-center" })
                    <a href="~/ShopBag/Index" class="btn btn-light align-self-center"><img src="~/Images/bag02.svg" alt="Bag" style="width:24px" /></a>   
                    @*@Html.ActionLink(@Nyika.WebUI.LanguageResources.Global.Bag, "ChangeLanguage", "Language", new { SelectedLanguage = "bn" }, new { @class = "btn btn-light" })*@
                </div>


            </div>


            <div class="col-12 text-left align-self-center">
                @using (Html.BeginForm("Search", "Shop", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="input-group text-center">
                        <input type="text" class="form-control" name="txtSearch" id="txtSearch" placeholder="@Nyika.WebUI.LanguageResources.Global.Search">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <img src="~/images/svg/magnifying-glass.svg" alt="home" style="width:30px">
                            </button>
                        </div>
                    </div>

                }

            </div>

        </div>
    </div>




    <div class="container-fluid bg-white" style="min-height:540px">
        @RenderBody()
    </div>


    <div class="container-fluid">
        <footer class="py-md-3 my-md-3 bg-white text-dark">
            <div class="row">
                <div class="col-md-4">
                    <ul class="list-inline text-md-left p-md-0 m-md-0">
                        <li class="list-inline-item"><a href="~/Terms" style="text-decoration:none;color:black"><strong>@Nyika.WebUI.LanguageResources.Global.Terms</strong></a></li>
                        <li class="list-inline-item">|</li>
                        <li class="list-inline-item"><a href="~/Privacy" style="text-decoration:none;color:black"><strong>@Nyika.WebUI.LanguageResources.Global.Privacy</strong></a></li>
                    </ul>
                </div>
                <div class="col-md-8">
                    <p class="text-md-right p-md-1 m-md-0">@Nyika.WebUI.LanguageResources.Global.Copyright <a href="http://www.azmainventures.com" style="color:#ff6038;text-decoration:none"><strong>Azmain Ventures</strong></a></p>
                    @*<p class="text-md-right p-md-1 m-md-0">Dar-es-Salaam, Tanzania</p>*@
                </div>
            </div>

        </footer>
