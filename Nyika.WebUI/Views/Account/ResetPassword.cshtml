@model Nyika.WebUI.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<div class="row">
    <div class="offset-md-3 col-md-6">
        <div class="card">

            <div class="card-header">
                <h4>Reset your password.</h4>
            </div>

            <div class="card-block" style="min-height:275px">
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Code)
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-inline p-md-2">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-4 justify-content-end" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-inline p-md-2">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-4 justify-content-end" })
                        <div class="col-md-8">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-inline p-md-2">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 justify-content-end" })
                        <div class="col-md-8">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-inline p-md-2">
                        <div class="offset-4 col-5">
                            <input type="submit" class="btn btn-outline-success btn-block" value="Reset" />
                        </div>
                    </div>
                    <div class="p-md-2">

                    </div>
                }

            </div>
        </div>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
